<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <solid android:color="#FF0000" /> <!-- Change color as needed -->

    <size
        android:width="60dp"
        android:height="60dp" />

    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" />

    <corners android:radius="30dp" />

    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />

</shape>
