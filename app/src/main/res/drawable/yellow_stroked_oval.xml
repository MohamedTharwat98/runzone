<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <solid android:color="@color/black" />

    <size
        android:width="60dp"
        android:height="60dp" />

    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" />

    <corners android:radius="30dp" />

    <stroke
        android:width="10dp"
        android:color="@color/yellow" />
</shape>
