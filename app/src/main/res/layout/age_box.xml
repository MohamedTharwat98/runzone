            android:gravity="end"
            android:paddingEnd="8dp"
            android:layout_gravity="center_vertical"/>

        <SeekBar
            android:id="@+id/seekBarZone1"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/percentageZone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>


    <!-- Zone 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Zone 2 :"
            android:gravity="end"
            android:paddingEnd="8dp"
            android:layout_gravity="center_vertical"/>

        <SeekBar
            android:id="@+id/seekBarZone2"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/percentageZone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Zone 3 -->
